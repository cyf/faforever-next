{
  "name": "faforever",
  "private": true,
  "version": "0.0.0+1",
  "type": "module",
  "scripts": {
    "build": "tauri build",
    "build:app": "cd app && yarn build && cd ..",
    "build:docs": "cd docs && yarn build && cd ..",
    "dev": "tauri dev",
    "dev:app": "cd app && yarn dev && cd ..",
    "dev:docs": "cd docs && yarn dev && cd ..",
    "format": "yarn format:app && yarn format:docs",
    "format:app": "cd app && yarn format && cd ..",
    "format:docs": "cd docs && yarn format && cd ..",
    "postinstall": "npm-run-all install:*",
    "install:app": "cd app && yarn && cd ..",
    "install:docs": "cd docs && yarn && cd ..",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@tauri-apps/cli": "^1.5.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": "^18"
  }
}
